---
import { 
  Terminal, CreditCard, LayoutGrid, ChevronDown,
  Book, HelpCircle, Headphones, Activity, ExternalLink
} from "@lucide/astro";

// Obtenemos la ruta actual desde el servidor
const pathname = Astro.url.pathname;

const helpLinks = [
  { icon: Book, label: "Guías", href: "https://docs.arkaniahost.xyz" },
  { icon: HelpCircle, label: "FAQ", href: "/faq" }, 
  { icon: Headphones, label: "Soporte", href: "/help" },
  { icon: Activity, label: "Estado", href: "https://status.arkaniahost.xyz" },
  { isDiscord: true, label: "Discord", href: "https://discord.arkaniahost.xyz" },
];

// Función simple para verificar si un link está activo
const isActive = (href: string) => {
  // Caso especial para Inicio
  if (href === '/') return pathname === '/';
  // Ignoramos anclas y enlaces externos
  if (href.startsWith('http') || href.startsWith('#')) return false;
  
  // Normalización para evitar errores con trailing slashes (ej: /about vs /about/)
  const currentPath = pathname.endsWith('/') && pathname.length > 1 ? pathname.slice(0, -1) : pathname;
  const targetPath = href.endsWith('/') && href.length > 1 ? href.slice(0, -1) : href;

  return currentPath === targetPath || currentPath.startsWith(targetPath + '/');
};

// Verificaciones específicas para los enlaces principales
const isHomeActive = isActive('/');
const isAboutActive = isActive('/about'); // <--- NUEVA VARIABLE
---

<div class="fixed top-0 left-0 w-full z-50 px-4 py-4 pointer-events-none">
  <nav
    id="navbar"
    class="max-w-7xl mx-auto pointer-events-auto bg-background/60 backdrop-blur-sm border border-border-subtle rounded-full px-7 shadow-lg"
  >
    <div class="flex items-center justify-between h-[58px]">
      
      <div class="flex items-center gap-10">
        <a href="/" class="flex items-center gap-2 group shrink-0">
          <Terminal class="h-5 w-5 text-brand-cyan" />
          <span class="font-black text-[16px] tracking-tighter text-white uppercase">
            Arkania<span class="text-brand-cyan font-black">Host</span>
          </span>
        </a>

        <div class="hidden lg:flex items-center gap-8 text-[14px] font-bold">
          
          <a 
            href="/" 
            class={`transition-colors ${isHomeActive ? 'text-brand-magenta' : 'text-slate-200 hover:text-brand-magenta'}`}
          >
            Inicio
          </a>

          <a 
            href="/about" 
            class={`transition-colors ${isAboutActive ? 'text-brand-magenta' : 'text-slate-200 hover:text-brand-magenta'}`}
          >
            Nosotros
          </a>
          
          <div class="relative group h-[58px] flex items-center">
            <button class={`flex items-center gap-1 transition-colors ${helpLinks.some(l => isActive(l.href)) ? 'text-brand-magenta' : 'text-slate-200 group-hover:text-brand-magenta'}`}>
              Ayuda <ChevronDown size={14} class="opacity-40 group-hover:rotate-180 transition-transform duration-300" />
            </button>

            <div class="absolute top-full left-1/2 -translate-x-1/2 pt-2 opacity-0 translate-y-2 pointer-events-none group-hover:opacity-100 group-hover:translate-y-0 group-hover:pointer-events-auto transition-all duration-300">
              <div class="w-48 bg-surface/90 backdrop-blur-xl border border-border-subtle rounded-brand p-2 shadow-2xl">
                {helpLinks.map((link) => {
                  const IconComponent = link.icon;
                  const isLinkActive = isActive(link.href);
                  
                  return (
                    <a 
                      href={link.href} 
                      class={`flex items-center gap-3 px-4 py-3 rounded-brand transition-all group/item 
                        ${isLinkActive ? 'bg-white/5 text-brand-magenta' : 'text-slate-300 hover:text-white hover:bg-white/5'}`}
                    >
                      {link.isDiscord ? (
                        <div class={`w-[18px] h-[18px] transition-colors ${isLinkActive ? 'text-brand-magenta' : 'text-slate-500 group-hover/item:text-brand-magenta'}`}>
                          <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="currentColor">
                            <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189Z"/>
                          </svg>
                        </div>
                      ) : (
                        IconComponent && <IconComponent size={18} class={`transition-colors ${isLinkActive ? 'text-brand-magenta' : 'text-slate-500 group-hover/item:text-brand-magenta'}`} />
                      )}
                      <span class="text-[13px] font-bold">{link.label}</span>
                    </a>
                  );
                })}
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="flex items-center gap-6">
        <div class="hidden md:flex items-center gap-6 border-r border-border-subtle pr-6">
          <a href="https://billing.arkaniahost.xyz" target="_blank" class="flex items-center gap-2 text-[13px] font-bold text-slate-400 hover:text-brand-magenta transition-colors group">
            <CreditCard size={16} class="opacity-40 group-hover:opacity-100 transition-opacity" /> Clientes
          </a>
          <a href="https://panel.arkaniahost.xyz" target="_blank" class="flex items-center gap-2 text-[13px] font-bold text-slate-400 hover:text-brand-magenta transition-colors group">
            <LayoutGrid size={16} class="opacity-40 group-hover:opacity-100 transition-opacity" /> Panel
          </a>
        </div>

        <a
        href="#pricing"
        class="btn-primary h-9 text-[13px] px-5 shadow-lg shadow-brand-cyan/10"
        >
          Crear servidor <ExternalLink size={14} />
        </a>
      </div>
    </div>
  </nav>
</div>