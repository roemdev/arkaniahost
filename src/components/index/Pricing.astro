---
import { Leaf, Cpu, Rocket, Gamepad2, ArrowRight } from "@lucide/astro";

const plans = [
  {
    ram: "4 GB RAM",
    icon: Leaf,
    desc: "Servidores básicos y algunos modpacks.",
    price: "$4.00",
    link: "https://billing.arkaniahost.xyz/products/minecraft-server/4gb/checkout?plan=54&options[52]=53",
    recommended: false,
    isCustom: false
  },
  {
    ram: "6 GB RAM",
    icon: Cpu,
    desc: "Modpacks pesados y uso de plugins.",
    price: "$6.00",
    link: "https://billing.arkaniahost.xyz/products/minecraft-server/6gb/checkout?plan=64&options[52]=53",
    recommended: true,
    isCustom: false
  },
  {
    ram: "8 GB RAM",
    icon: Rocket,
    desc: "Servidores avanzados y todos los modpacks.",
    price: "$8.00",
    link: "https://billing.arkaniahost.xyz/products/minecraft-server/8gb/checkout?plan=65&options[52]=53",
    recommended: false,
    isCustom: false
  },
  {
    ram: "OTROS JUEGOS",
    icon: Gamepad2,
    desc: "Solicita hosting para juegos fuera de Minecraft.",
    price: "A MEDIDA",
    link: "https://billing.arkaniahost.xyz/tickets/create",
    recommended: false,
    isCustom: true
  }
];
---

<section id="pricing" class="py-24 relative bg-background border-b border-white/5">
  <div class="absolute inset-0 bg-grid-pattern opacity-5 pointer-events-none"></div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    
    <div class="text-center mb-16">
      <h2 class="text-2xl md:text-4xl font-black text-white uppercase tracking-tighter">
        PLANES A <span class="text-transparent bg-clip-text bg-linear-to-r from-brand-cyan to-brand-magenta">TU MEDIDA</span>
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {plans.map((plan) => (
        <div class="h-full"> 
        
        {plan.recommended ? (
            /* --- TARJETA RECOMENDADA (Borde Degradado Real) --- */
            <div class="relative group h-full p-px rounded-xl bg-linear-to-r from-brand-cyan to-brand-magenta shadow-[0_0_20px_rgba(217,70,239,0.15)] -translate-y-2">
                
                <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-4 py-1 bg-linear-to-r from-brand-cyan to-brand-magenta rounded-full shadow-lg shadow-brand-magenta/30 z-20">
                    <span class="text-[10px] font-black text-white uppercase tracking-widest flex items-center gap-1">
                    Recomendado
                    </span>
                </div>

                <div class="bg-surface rounded-xl h-full p-6 flex flex-col justify-between min-h-95">
                     <div>
                        <div class="flex items-center gap-3 mb-4">
                            <div class="p-2 rounded-lg bg-white/5 border border-white/10 text-brand-magenta">
                                <plan.icon size={24} />
                            </div>
                            <h3 class="text-xl font-black text-white uppercase tracking-tight">
                                {plan.ram}
                            </h3>
                        </div>
                        <p class="text-sm text-slate-400 font-light leading-relaxed mb-6 border-b border-white/5 pb-6">
                            {plan.desc}
                        </p>
                     </div>

                     <div class="mt-auto">
                        <div class="mb-6">
                             <div class="flex flex-col">
                                <span class="text-3xl font-bold text-white tracking-tight">{plan.price}</span>
                                <span class="text-xs text-slate-500 font-mono">Facturado mensualmente</span>
                            </div>
                        </div>
                        <a 
                          href={plan.link}
                          target="_blank" rel="noopener noreferrer"
                          class="group/btn w-full py-3 px-4 rounded-lg flex items-center justify-center gap-2 font-bold uppercase tracking-wide text-xs transition-all duration-300 bg-linear-to-r from-brand-cyan-dark to-brand-magenta-dark border border-white/10 text-white hover:shadow-[0_0_20px_rgba(217,70,239,0.25)]"
                        >
                          ORDENAR AHORA 
                          <ArrowRight size={14} class="group-hover/btn:translate-x-1 transition-transform" />
                        </a>
                     </div>
                </div>
            </div>
        ) : (
            /* --- TARJETA ESTÁNDAR (Hover Magenta) --- */
            <div class="group relative bg-surface border border-white/5 hover:border-brand-magenta/50 rounded-xl p-6 flex flex-col justify-between transition-all duration-300 min-h-95 hover:-translate-y-1">
                 
                 <div>
                    <div class="flex items-center gap-3 mb-4">
                        <div class="p-2 rounded-lg bg-white/5 border border-white/10 text-brand-cyan group-hover:text-brand-magenta transition-colors">
                            <plan.icon size={24} />
                        </div>
                        <h3 class="text-xl font-black text-white uppercase tracking-tight">
                            {plan.ram}
                        </h3>
                    </div>
                    <p class="text-sm text-slate-400 font-light leading-relaxed mb-6 border-b border-white/5 pb-6">
                        {plan.desc}
                    </p>
                 </div>

                 <div class="mt-auto">
                    <div class="mb-6">
                         {plan.isCustom ? (
                             <span class="text-2xl font-bold text-white tracking-tight">{plan.price}</span>
                         ) : (
                            <div class="flex flex-col">
                                <span class="text-3xl font-bold text-white tracking-tight">{plan.price}</span>
                                <span class="text-xs text-slate-500 font-mono">Facturado mensualmente</span>
                            </div>
                         )}
                    </div>
                    
                    <a 
                      href={plan.link}
                      target="_blank" rel="noopener noreferrer"
                      class="group/btn w-full py-3 px-4 rounded-lg flex items-center justify-center gap-2 font-bold uppercase tracking-wide text-xs transition-all duration-300 bg-white/5 border border-white/10 text-slate-300 hover:bg-white/10 hover:text-white"
                    >
                      {plan.isCustom ? 'ABRIR TICKET' : 'ORDENAR AHORA'} 
                      <ArrowRight size={14} class="group-hover/btn:translate-x-1 transition-transform" />
                    </a>
                 </div>
            </div>
        )}
        
        </div>
      ))}
    </div>

  </div>
</section>