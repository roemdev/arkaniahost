---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Hosting de Game Servers y Bots Discord gratuito para LATAM.",
  image = "/og-image.jpg"
} = Astro.props;

// --- Lógica para el Banner de Strapi ---
let bannerData = null;
let connectionError = false;

try {
  // Intentamos conectar con tu No-IP
  const response = await fetch('https://emivir-strapi.sytes.net/api/test');
  if (response.ok) {
    const json = await response.json();
    if (json.data) {
      // Ajuste para Strapi 5 (objeto directo o primer elemento de array)
      bannerData = Array.isArray(json.data) ? json.data[0] : json.data;
    }
  } else {
    connectionError = true;
  }
} catch (error) {
  console.error("Error de conexión con Strapi:", error);
  connectionError = true;
}
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700&family=Fraunces:ital,wght@1,400;1,600&display=swap" rel="stylesheet" />
    
    <style>
      :root {
        --accent-color: #d946ef; /* Fuchsia 500 */
      }
      .serif-italic { font-family: 'Fraunces', serif; font-style: italic; }
    </style>
  </head>
  <body class="bg-slate-950 text-slate-200 font-sans selection:bg-fuchsia-500 overflow-x-hidden">

    {bannerData && bannerData.title && (
      <div class="relative w-full bg-[#0a0a0b] border-b border-fuchsia-500 py-2.5 z-50">
        <div class="max-w-7xl mx-auto px-4 flex items-center justify-center gap-x-4">
          <span class="bg-fuchsia-500/10 px-2 py-0.5 rounded border border-fuchsia-500/30 text-[10px] font-bold text-fuchsia-400 uppercase tracking-tighter">
            News
          </span>
          <p class="text-sm font-medium text-slate-200 tracking-wide">
            {bannerData.title}
          </p>
          <button type="button" class="text-slate-500 hover:text-white transition-colors" onclick="this.closest('.relative').remove()">
            <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor"><path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" /></svg>
          </button>
        </div>
      </div>
    )}

    {connectionError && (
      <div class="bg-red-500/10 border-b border-red-500/20 py-1 text-[9px] text-center text-red-400">
        No se pudo conectar con Strapi (emivir-strapi.sytes.net)
      </div>
    )}

    <slot />

  </body>
</html>