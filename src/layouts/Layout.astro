---
import "../styles/global.css";
import SpeedInsights from '@vercel/speed-insights/astro';
import SEO from "../components/SEO.astro";

interface Props {
  title: string;
  description?: string;
  schema?: Record<string, any>;
}

const { 
  title, 
  description = "Hosting de servidores de Minecraft en LATAM y EE.UU. con latencia m√≠nima.",
  schema
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <SEO
      title={`${title} | ArkaniaHost`}
      description={description}
      schema={schema}
    />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="selection:bg-brand-cyan/30 selection:text-white">
    
    <div class="fixed inset-0 bg-grid-pattern pointer-events-none opacity-25"></div>

    <main class="relative z-10 flex flex-col min-h-screen">
      <slot />
    </main>

    <SpeedInsights />
  </body>
</html>