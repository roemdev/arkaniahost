---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { 
  Ticket, 
  Mail, 
  Activity, 
  Clock, 
  AlertTriangle, 
  ExternalLink,
  LifeBuoy,
  Search,
  BookOpen,
  FileText,
  CheckCircle2,
  HelpCircle
} from "@lucide/astro";

// --- SVG PERSONALIZADO ---
const discordIcon = `<svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="currentColor"><title>Discord</title><path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189Z"/></svg>`;

// --- DATOS ---

const diagnosticSteps = [
  {
    step: "1",
    title: "Revisar Documentación",
    desc: "Consulta guías y soluciones comunes.",
    icon: BookOpen,
    href: "https://docs.arkaniahost.xyz"
  },
  {
    step: "2",
    title: "Buscar en Discord",
    desc: "Encuentra soluciones de otros usuarios.",
    icon: Search,
    href: "https://discord.arkaniahost.xyz"
  },
  {
    step: "3",
    title: "Recopilar Información",
    desc: "Ten a mano logs, errores y detalles.",
    icon: FileText,
    href: "https://panel.arkaniahost.xyz"
  },
  {
    step: "4",
    title: "Verificar Estado",
    desc: "Revisa si hay incidencias activas.",
    icon: Activity,
    href: "https://status.arkaniahost.xyz"
  }
];

const contactMethods = [
  {
    name: "Discord",
    time: "Casi inmediato",
    href: "https://discord.arkaniahost.xyz",
    isSvg: true, 
    icon: discordIcon, 
    color: "text-[#5865F2]",
    border: "hover:border-[#5865F2]/50",
    bg: "bg-[#5865F2]/10"
  },
  {
    name: "Tickets",
    time: "~10 min",
    href: "https://billing.arkaniahost.xyz/submitticket.php",
    isSvg: false,
    icon: Ticket,
    color: "text-brand-magenta",
    border: "hover:border-brand-magenta/50",
    bg: "bg-brand-magenta/10"
  },
  {
    name: "Email",
    time: "~15 min",
    href: "mailto:soporte@arkaniahost.xyz",
    isSvg: false,
    icon: Mail,
    color: "text-brand-cyan",
    border: "hover:border-brand-cyan/50",
    bg: "bg-brand-cyan/10"
  }
];

const scopeItems = [
  {
    title: "Problemas de Cuenta",
    desc: "Reseteo de contraseña, verificación, facturación y gestión de cuenta."
  },
  {
    title: "Soporte Técnico",
    desc: "Configuración del servidor, dominios, archivos y despliegue de aplicaciones."
  },
  {
    title: "Asistencia con Funciones",
    desc: "Ayuda con subdominios, integración Git, gestor de archivos y plataforma."
  },
  {
    title: "Preguntas Generales",
    desc: "Información del servicio, precios, características y capacidades."
  }
];

const hours = [
  { day: "Lunes - Viernes", time: "9:00 AM - 9:00 PM" },
  { day: "Sábados", time: "12:00 PM - 6:00 PM" },
  { day: "Domingos", time: "Solo Emergencias" },
];
---

<Layout title="Centro de Ayuda | ArkaniaHost">
  <Navbar />
  
  <main class="min-h-screen bg-background pt-32 pb-20 relative">
    
    <div class="max-w-7xl mx-auto px-6 mb-10">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6 border-b border-white/5 pb-8">
        <div>
          <h1 class="text-3xl md:text-5xl font-black text-white mb-2 flex flex-col md:flex-row md:items-center gap-2 md:gap-3">
            <span class="flex items-center gap-3">Centro de</span>
            <span class="text-gradient">Ayuda</span>
          </h1>
          <p class="text-slate-400 text-sm md:text-base max-w-xl mt-4">
            Estamos aquí para ayudarte a sacar el máximo provecho de tu experiencia de alojamiento con ArkaniaHost. Nuestro equipo de soporte está dedicado a brindarte la asistencia que necesitas.
          </p>
        </div>
        
        <div class="shrink-0 bg-surface/50 rounded-full px-4 py-2 border border-white/5">
          <iframe 
            src="https://status.arkaniahost.xyz/badge?theme=dark" 
            width="180" 
            height="30" 
            frameborder="0" 
            scrolling="no" 
            style="color-scheme: normal; display: block;"
            title="Estado de ArkaniaHost"
          ></iframe>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <div class="lg:col-span-2 space-y-8">
        
        <section class="bg-surface border border-white/10 rounded-xl p-6 relative overflow-hidden">
          
          <div class="flex items-center gap-3 mb-6">
            <span class="flex items-center justify-center w-6 h-6 rounded bg-brand-cyan/20 text-brand-cyan text-xs font-bold">1</span>
            <h2 class="text-lg font-bold text-white">Antes de contactar</h2>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            {diagnosticSteps.map((step) => (
              <a href={step.href} target={step.href.startsWith('http') ? "_blank" : "_self"} class="group/step relative flex flex-col h-full bg-background border border-white/5 p-4 rounded-lg hover:border-brand-cyan/30 transition-all hover:-translate-y-1">
                <div class="mb-3 text-slate-400 group-hover/step:text-brand-cyan transition-colors">
                  <step.icon size={20} />
                </div>
                <h3 class="text-sm font-bold text-white mb-1">{step.title}</h3>
                <p class="text-[11px] text-slate-500 leading-snug group-hover/step:text-slate-400 flex-1">
                  {step.desc}
                </p>
              </a>
            ))}
          </div>
        </section>

        <section class="bg-surface border border-white/10 rounded-xl p-6">
            <div class="flex items-center gap-3 mb-6">
               <span class="flex items-center justify-center w-6 h-6 rounded bg-brand-cyan/20 text-brand-cyan text-xs font-bold">2</span>
               <h2 class="text-lg font-bold text-white">¿En qué podemos ayudar?</h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {scopeItems.map((item) => (
                <div class="flex items-start gap-4 p-5 rounded-xl border border-white/5 bg-background/50">
                  <CheckCircle2 size={18} class="text-brand-cyan shrink-0 mt-1" />
                  <div>
                    <strong class="text-sm text-white block mb-1">{item.title}</strong>
                    <p class="text-xs text-slate-400 leading-relaxed">{item.desc}</p>
                  </div>
                </div>
              ))}
            </div>
        </section>

        <section class="bg-red-950/10 border border-red-500/20 rounded-xl p-6 relative overflow-hidden group">
          <div class="absolute -right-10 -top-10 w-40 h-40 bg-red-500/10 blur-[50px] rounded-full pointer-events-none group-hover:bg-red-500/20 transition-colors"></div>
          
          <div class="relative z-10 flex flex-col md:flex-row gap-6 items-center">
            <div class="p-3 bg-red-500/10 rounded-lg border border-red-500/20 text-red-500 shrink-0">
              <AlertTriangle size={24} />
            </div>
            
            <div class="flex-1 text-center md:text-left">
              <h3 class="text-base font-bold text-white mb-1">Soporte de Emergencia</h3>
              <p class="text-xs text-slate-400">
                Uso exclusivo para: Caídas totales de nodo, pérdida de datos o fallos de seguridad.
              </p>
            </div>

            <a href="https://billing.arkaniahost.xyz/submitticket.php?step=2&deptid=2" target="_blank" class="px-5 py-2 bg-red-600 hover:bg-red-500 text-white text-xs font-bold uppercase tracking-wider rounded transition-colors shadow-lg shadow-red-900/20 whitespace-nowrap">
              Reportar Fallo
            </a>
          </div>
        </section>

      </div>

      <div class="space-y-6">
        
        <div class="bg-surface border border-white/5 rounded-xl p-6">
            <div class="flex items-center gap-3 mb-6">
                <span class="flex items-center justify-center w-6 h-6 rounded bg-brand-magenta/20 text-brand-magenta text-xs font-bold">3</span>
                <h2 class="text-lg font-bold text-white">Canales de Atención</h2>
            </div>
            
            <div class="flex flex-col gap-4">
              {contactMethods.map((method) => (
                <a href={method.href} target="_blank" class={`group flex items-center gap-4 bg-background border border-white/5 p-4 rounded-xl transition-all duration-300 hover:-translate-y-1 ${method.border}`}>
                  <div class={`w-10 h-10 rounded-lg flex items-center justify-center shrink-0 transition-colors ${method.bg} ${method.color}`}>
                     {method.isSvg ? (
                       <div class="w-5 h-5" set:html={method.icon} />
                     ) : (
                       <method.icon size={20} />
                     )}
                  </div>
                  
                  <div class="flex flex-col">
                    <span class="text-white font-bold text-sm leading-none mb-1">{method.name}</span>
                    <span class={`text-[11px] font-mono opacity-80 ${method.color}`}>{method.time}</span>
                  </div>
  
                  <ExternalLink size={14} class="ml-auto text-slate-600 group-hover:text-white transition-colors" />
                </a>
              ))}
            </div>
        </div>

        <div class="bg-surface border border-white/5 rounded-xl p-6">
          <div class="flex items-center gap-2 mb-4">
            <Clock size={18} class="text-brand-magenta" />
            <h3 class="text-sm font-bold text-white uppercase tracking-wider">Horario de Atención</h3>
          </div>
          
          <ul class="space-y-3">
            {hours.map((h) => (
              <li class="flex flex-col border-b border-white/5 pb-2 last:border-0 last:pb-0">
                <span class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-1">{h.day}</span>
                <span class="text-sm font-mono font-bold text-white">{h.time}</span>
              </li>
            ))}
          </ul>
          
          <div class="mt-6 pt-4 border-t border-white/5">
            <div class="text-[10px] font-mono font-bold text-brand-cyan uppercase tracking-widest text-center mb-2">
              Zona Horaria: UTC-4
            </div>
            <p class="text-[10px] text-slate-500 leading-relaxed text-center italic">
              Nota: Los tiempos de respuesta pueden variar durante las horas pico. Intentamos responder a todas las consultas en un plazo de 24 horas.
            </p>
          </div>
        </div>

      </div>

    </div>
  </main>

  <Footer />
</Layout>