---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/index/Hero.astro";
import WhatYouGet from "../components/index/WhatYouGet.astro";
import ForWho from "../components/index/ForWho.astro";
import Features from "../components/index/Features.astro";
import PingTester from "../components/index/PingTester.astro";
import Pricing from "../components/index/Pricing.astro";
import FAQ from "../components/index/FAQ.astro";
import SeoContent from "../components/index/SeoContent.astro";
import Footer from "../components/Footer.astro";

// Nota: He dejado Navbar, Hero, FAQ y Footer importados. 
// Deberás crear Features.astro y Pricing.astro basándote en lo que hablamos.

const schema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "https://arkaniahost.xyz/#organization",
      "name": "ArkaniaHost",
      "url": "https://arkaniahost.xyz",
      "logo": {
        "@type": "ImageObject",
        "url": "https://arkaniahost.xyz/favicon.svg"
      },
      "sameAs": [
        "https://discord.arkaniahost.xyz",
        "https://youtube.com/@arkaniahost",
        "https://x.com/arkaniahost",
        "https://linkedin.com/company/arkaniahost",
        "https://instagram.com/arkaniahost",
        "https://facebook.com/arkaniahost"
      ]
    },
    {
      "@type": "WebSite",
      "@id": "https://arkaniahost.xyz/#website",
      "url": "https://arkaniahost.xyz",
      "name": "ArkaniaHost",
      "description": "Hosting de servidores de Minecraft de alto rendimiento en LATAM y EE.UU. con latencia mínima, protección anti-DDoS y soporte premium especializado.",
      "publisher": {
        "@id": "https://arkaniahost.xyz/#organization"
      }
    }
  ]
};
---

<Layout title="Hosting de Servidores de Minecraft | LATAM" schema={schema}>
  <Navbar />
  
  <main>
    <Hero />

    <WhatYouGet />

    <ForWho />
    
    <Features />

    <PingTester />
    
    <Pricing />
    
    <FAQ />

    <SeoContent />
  </main>

  <Footer />
</Layout>